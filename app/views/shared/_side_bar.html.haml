%div{class: "chat-side"}
  %div{class: "chat-user clearfix"}
    %h5
      = current_user.name
    %div{class: "chat-user__actions"}
      = link_to new_group_path, style: 'color: white' do
        = fa_icon 'pencil-square-o', class: 'icon-white'
      = link_to edit_user_path(current_user), style: 'color: white;' do
        = fa_icon 'cog', class: 'icon-white'

  %ul{class: "chat-groups"}
    - current_user.groups.each do |group|
      .chat-group
        .chat-group__link
          .chat-group__name
            = link_to group.name, group_messages_path(group)
            .chat-group__message
              = group.show_last_message
